<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:orientation="vertical"
    android:background="#caf4ee"
    tools:context="com.hello.reshu.com.admissionform.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Management System"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:text="Name" />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginRight="80dp"/>

        <EditText
            android:id="@+id/edittext_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your address"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginRight="40dp"/>

        <EditText
            android:id="@+id/edittext_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your Phone Number"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/textview_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College Name"
            android:layout_marginRight="40dp"/>

        <EditText
            android:id="@+id/edittext_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your College Name"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/btn_add"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/button_displayresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Result"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:text="Students records are:::::::"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/display_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </ScrollView>



</LinearLayout>
